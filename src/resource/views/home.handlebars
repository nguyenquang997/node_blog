<div class="mt-4">
    <div class="row">
        {{#each coursesJson}}
        <div class="col-sm-6 col-lg-3 ">

            <div class="card card-sourse-item">\
                <a href="courses/{{this.slugurl}}">
                    <img src={{this.image}} class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                    <a href="courses/{{this.slugurl}}">
                        <h5 class=" card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.info}}</p>
                    <a href="#" class="btn btn-primary">Xem Khóa học</a>
                </div>
            </div>

        </div>
        {{/each}}
    </div>
</div>